{
    "window.menuBarVisibility": "toggle",
    "editor.codeLens": false,
    "editor.semanticHighlighting.enabled": true,
    "extensions.ignoreRecommendations": true,
    "files.simpleDialog.enable": true,
    "gitlens.showWelcomeOnInstall": false,
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.plusFeatures.enabled": false,
    "gitlens.virtualRepositories.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.currentLine.pullRequests.enabled": false,
    "gitlens.currentLine.scrollable": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.recentChange.command": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.statusBar.pullRequests.enabled": false,
    "gitlens.hovers.enabled": false,
    "gitlens.hovers.avatars": false,
    "gitlens.fileAnnotations.dismissOnEscape": false,
    "gitlens.ai.experimental.generateCommitMessage.enabled": false,
    "editor.minimap.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "cmake.configureOnOpen": false,
    "cmake.showOptionsMovedNotification": false,
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "python.createEnvironment.trigger": "off",
    "svelte.enable-ts-plugin": true,
    "editor.renderWhitespace": "none",
    "terminal.integrated.persistentSessionScrollback": 1000,
    "terminal.integrated.scrollback": 10000,
    "editor.inlayHints.enabled": "off",
    "editor.rulers": [
        80,
    ],
    "editor.selectionClipboard": false,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "c"],
            "commands": ["C_Cpp.SwitchHeaderSource"]
        },
        {
            "before": ["<leader>", "v"],
            "commands": ["workbench.action.splitEditor"]
        },
        {
            "before": ["<leader>", "V"],
            "commands": ["workbench.action.splitEditorDown"]
        },
        {
            "before": ["<leader>", "A"],
            "commands": ["workbench.action.closeAllEditors"]
        },
        {
            "before": ["<leader>", "a"],
            "commands": ["workbench.action.closeEditorsInOtherGroups", "workbench.action.focusActiveEditorGroup"]
        },
        {
            "before": ["<leader>", "Q"],
            "commands": ["workbench.action.closeEditorsInGroup"]
        },
        {
            "before": ["<leader>", "q"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<leader>", "j"],
            "commands": ["workbench.action.focusPreviousGroup"]
        },
        {
            "before": ["<leader>", "k"],
            "commands": ["workbench.action.focusNextGroup"]
        },
        {
            "before": ["<leader>", "d"],
            "commands": ["editor.action.revealDefinition"]
        },
        {
            "before": ["<leader>", "D"],
            "commands": ["editor.action.revealDeclaration"]
        },
        {
            "before": ["<leader>", "p"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "P"],
            "commands": ["workbench.action.focusNextGroup", "workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "S"],
            "commands": ["workbench.action.showAllSymbols"]
        },
        {
            "before": ["<leader>", "s"],
            "commands": ["workbench.action.gotoSymbol"]
        },
        {
            "before": ["<leader>", "g"],
            "commands": ["git.openChange"]
        },
    ],
}
